<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <link rel="stylesheet" href="/main.css" />
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>

      <% if (locals.Id) { %>

      <p>
        Your Shortened URL:

        <a href="/url/api/<%= Id %>" class="short-url" target="_blank">
          http://localhost:8000/url/api/<%= Id %>
        </a>
      </p>

      <% } %>

      <!-- Form to shorten a new URL -->
      <form action="/url" method="POST" class="shorten-form">
        <input
          type="url"
          name="redirectURL"
          placeholder="Enter URL to shorten..."
          required
        />
        <button type="submit">Shorten</button>
      </form>

      <button class="getallurl">Get All URLs</button>
      <div class="url-list"></div>
    </div>

    <form action="/user/signout" method="POST">
      <button type="submit" class="signout-btn">Sign Out</button>
    </form>
  </div>

    <script src="/main.js"></script>
  </body>
</html>
